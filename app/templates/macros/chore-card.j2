{% macro chore_card(chore) %}

    <div class="card card-chore mb-2 rounded-3 shadow-sm" data-chore-id="{{ chore.id }}" draggable="true">
        <a href="{{ url_for('chores.view_chore', chore_id=chore.id) }}" class="card-body text-decoration-none">
            <h5>{{ chore.title }}</h5>
            <p class="small">
                {{ chore.description | markdown | striptags | truncate(100, True) }}
            </p>
        </a>
    </div>

{% endmacro %}