<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container container-fluid">
            <a class="navbar-brand" href="{{ url_for('routes.index') }}">ChoreChirp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav ms-auto">
                    {% if current_user.is_authenticated %}
                        <a class="nav-link" href="{{ url_for('user.logout') }}">Logout</a>
                    {% else %}
                        <a class="nav-link" href="{{ url_for('user.register') }}">Register</a>
                        <a class="nav-link" href="{{ url_for('user.login') }}">Login</a>
                    {% endif %}
                    <div>
                        <div class="vr d-none d-lg-flex h-100 mx-lg-2 text-secondary"></div>
                        <hr class="d-lg-none my-2 text-secondary">
                    </div>
                    <a id="dark-mode-toggle" class="nav-link d-flex" href="#" title="Toggle theme">
