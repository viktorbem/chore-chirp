{% from 'macros/logo-icon.j2' import logo_icon %}
{% from 'macros/navbar-link.j2' import navbar_link %}

<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container container-fluid">
            <a class="navbar-brand" href="{{ url_for('routes.index') }}">
                {{ logo_icon(32, 32, 1) }}
                <span class="ms-1">ChoreChirp</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                {% if current_user.is_authenticated %}
                    <div class="navbar-nav">
                        {{ navbar_link('routes.home', 'My chores') }}
                    </div>
                {% endif %}
                <div class="navbar-nav ms-auto">
                    {% if current_user.is_authenticated %}
                        {{ navbar_link('user.logout', 'Logout') }}
                    {% else %}
                        {{ navbar_link('user.signup', 'Sign Up') }}
                        {{ navbar_link('user.login', 'Login') }}
                    {% endif %}
                    <div>
                        <div class="vr d-none d-lg-flex h-100 mx-lg-2 text-secondary"></div>
                        <hr class="d-lg-none my-2 text-secondary">
                    </div>
                    <a id="dark-mode-toggle" class="nav-link d-flex" href="#" title="Toggle theme">
                        <i id="dark-mode-off" class="bi bi-sun"></i>
                        <i id="dark-mode-on" class="bi bi-moon-stars"></i>
                        <span class="d-lg-none ms-2">Toggle theme</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>