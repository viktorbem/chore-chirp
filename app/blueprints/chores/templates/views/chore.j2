{% extends 'base-chore.j2' %}

{% block head %}
    <title>{{ chore.title }} - ChoreChirp</title>
{% endblock %}

{% block main_column %}
    <section class="mb-4">
        <div class="card">
            <div class="card-header">
                <h3 class="chore-detail-title h3 my-0 d-flex justify-content-between align-items-center">
                    <span>{{ chore.title }}</span>
                    <div>
                        <a href="{{ url_for('chores.edit_chore', chore_id=chore.id) }}"
                           class="link-secondary" title="Edit chore">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="{{ url_for('chores.remove_chore', chore_id=chore.id) }}"
                           class="link-secondary" title="Remove chore">
                            <i class="bi bi-trash text-danger"></i>
                        </a>
                    </div>
                </h3>
            </div>

            <div class="card-body">
                {{ chore.description | markdown | safe }}
            </div>
        </div>
    </section>

    <hr>

    {% include 'comments.j2' %}

{% endblock %}
